{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
  
      "outDir": "./dist/lib",
      "rootDir": "./src",
  
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "resolveJsonModule": true
    },
    "include": ["src/*"],
    "exclude": ["src/**/*.test.ts", "**/node_modules"]
  }
  